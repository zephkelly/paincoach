{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./../src/*"],
            "@composables/*": ["./../src/composables/*"],
            "@components/*": ["./../src/components/*"],
            "@types/*": ["./../src/types/*"],
        },
        "types": ["vue"]
    },
    "include": [
        "./**/*.ts",
        "./**/*.vue",
        "../src/**/*.ts",
        "../src/**/*.vue",
        ".nuxt/nuxt.d.ts"
    ],
    "exclude": ["node_modules"]
}
