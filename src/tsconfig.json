{
    "extends": ["../tsconfig.json", "../web/.nuxt/tsconfig.json"],
    "compilerOptions": {
        "composite": true,
        "outDir": "./dist",
        "rootDir": "../",
        "paths": {
            "~/*": ["./"],
            "@assets/*": ["./assets/*"],
            "@composables/*": ["./composables/*"],
            "@components/*": ["./components/*"],
            "@types/*": ["./types/*"],
            "@utils/*": ["./utils/*"],
        }, 
    },
    "include": ["./**/*.ts", "./**/*.js", "./**/*.vue"],
    "exclude": ["node_modules"]
}